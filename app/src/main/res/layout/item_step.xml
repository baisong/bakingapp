<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_step_holder"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_step_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        tools:text="First, take out the laundry."
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/detail_list_item_top"
        android:layout_marginStart="@dimen/detail_list_item_top"
        android:layout_marginLeft="@dimen/detail_list_item_horizontal"/>
    <TextView
        android:id="@+id/tv_step_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        tools:text="1. First, take out the laundry and stuff."
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/detail_list_item_top"
        android:layout_marginStart="@dimen/detail_list_item_top"
        android:layout_marginLeft="@dimen/detail_list_item_horizontal"/>
    <TextView
        android:id="@+id/tv_video_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        tools:text="http://youtube.com"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/detail_list_item_top"
        android:layout_marginStart="@dimen/detail_list_item_top"
        android:layout_marginLeft="@dimen/detail_list_item_horizontal"/>
    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        tools:text="First, take out the laundry."
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_photo_size_select_actual_black_24dp"
        android:layout_marginTop="@dimen/detail_list_item_top"
        android:layout_marginStart="@dimen/detail_list_item_top"
        android:layout_marginLeft="@dimen/detail_list_item_horizontal"/>
</LinearLayout>