<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/recipe_card_paddingBottom"
    android:paddingTop="@dimen/recipe_card_paddingTop">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/tv_step_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detail_list_margin_top"
            android:textAppearance="?android:attr/textAppearanceSearchResultSubtitle"
            tools:text="Step short description" />

        <TextView
            android:id="@+id/tv_step_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detail_list_margin_top"
            android:textAppearance="?android:attr/textAppearanceSearchResultSubtitle"
            tools:text="1. This is the full body description of the step" />

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/detail_list_margin_bottom"
            android:layout_marginTop="@dimen/detail_list_margin_top"
            android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceSearchResultSubtitle"
            tools:text="Ingredients" />

        <TextView
            android:id="@+id/tv_video_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/detail_list_margin_top"
            android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceSearchResultSubtitle"
            tools:text="Steps" />

        <Button
            android:id="@+id/btn_prev_step"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_prev_step"
            android:textColor="@color/colorPrimaryLight"
            android:drawableStart="@drawable/ic_navigate_before_black_24dp"
            android:drawableLeft="@drawable/ic_navigate_before_black_24dp"
            android:drawablePadding="12dip"
            android:onClick="prevStep"/>

        <Button
            android:id="@+id/btn_next_step"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_next_step"
            android:textColor="@color/colorSecondaryInverseLight"
            android:background="@color/colorAccent"
            android:drawableStart="@drawable/ic_navigate_next_black_24dp"
            android:drawableLeft="@drawable/ic_navigate_next_black_24dp"
            android:drawablePadding="12dip"
            android:onClick="nextStep"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>